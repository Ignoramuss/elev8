# Lombok Configuration File
# This file configures Lombok behavior for the Elev8 project

# Enable full builder generation
lombok.anyConstructor.addConstructorProperties=true

# Suppress warnings for generated code
lombok.addLombokGeneratedAnnotation=true

# Copy annotations to generated methods (useful for Spring/CDI)
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += org.springframework.context.annotation.Lazy

# Stop looking for lombok.config in parent directories
config.stopBubbling=true

# Ensure compatibility with Java 17+
lombok.addNullAnnotations=none

# Field defaults (use explicit access modifiers)
lombok.fieldDefaults.defaultPrivate=false
lombok.fieldDefaults.defaultFinal=false
